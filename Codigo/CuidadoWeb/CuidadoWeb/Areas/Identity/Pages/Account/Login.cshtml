@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .app-topbar, .app-sidebar, .app-logo-bg {
            display: none !important;
        }

        #login {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .container-login {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 40px;
            text-align: center;
        }

            .container-login img {
                width: 150%;
                margin-bottom: 80px;
            }

            .container-login > form {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                gap: 50px;
                margin-bottom: 20px;
            }

        .input-group-login {
            margin-bottom: 32px;
        }

        .input-group-login {
            position: relative;
            width: 100%;
        }

            .input-group-login i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #434242;
                font-size: 1.3rem;
            }

        input.form-control {
            background-color: #CCD9EB;
            border-radius: 8px;
            border: none;
            color: #000;
            font-size: 1.3rem;
            padding-left: 45px;
            width: 530px;
            height: 65px;
        }

            input.form-control:focus {
                outline: none;
                border: 2px solid #A2C8F7;
                box-shadow: 0 0 5px rgba(162, 200, 247, 0.5);
            }

        button.btn {
            width: 300px;
            height: 55px;
            font-size: 1.3rem;
            padding: 1rem;
            margin-top: 40px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
            margin-top: 20px;
        }

            button.btn:hover {
                background-color: #0056b3;
            }

            button.btn i {
                font-size: 1.8rem;
            }
    </style>
</head>

<div id="login">
    <div class="container-login">
        <img src="~/assets/logo/colorful.svg" alt="Cuidado logo" class="img-fluid">
        <form method="post" action="/Account/Login">
            <div>
                <div class="mb-3">
                    <div class="input-group-login">
                        <i class="fas fa-id-card"></i>
                        <input type="text" class="form-control" id="username" name="username" required placeholder="CPF">
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group-login">
                        <i class="fas fa-key"></i>
                        <input type="password" class="form-control" id="password" name="password" required placeholder="Senha">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn">
                Entrar <i class="fas fa-arrow-right"></i>
            </button>
        </form>
    </div>
</div>