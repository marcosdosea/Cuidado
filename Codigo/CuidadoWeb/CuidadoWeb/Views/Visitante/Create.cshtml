@model CuidadoWeb.Models.VisitanteViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="Visitante-create">Registrar novo Visitante</h1>

<h4 class="visitante-create-h4">Dados Do visitante</h4>
<hr />
<div class="row-visitante-create">
