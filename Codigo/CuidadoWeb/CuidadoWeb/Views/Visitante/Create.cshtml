            </div>
            <div class="form-group-visitante">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control-visitante input-pequeno" />
                <span asp-validation-for="Cpf" class="text-danger-visitante"></span>
            </div>
            <div class="form-group-visitante">
                <label asp-for="PrimeiroTelefone" class="control-label"></label>
                <input asp-for="PrimeiroTelefone" class="form-control-visitante input-pequeno" />
                <span asp-validation-for="PrimeiroTelefone" class="text-danger-visitante"></span>
            </div>
            <div class="form-group-visitante">
                <label asp-for="SegundoTelefone" class="control-label"></label>
                <input asp-for="SegundoTelefone" class="form-control-visitante input-pequeno" />
                <span asp-validation-for="SegundoTelefone" class="text-danger-visitante input-pequeno"></span>
            </div>
            <div class="form-group-visitante">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
