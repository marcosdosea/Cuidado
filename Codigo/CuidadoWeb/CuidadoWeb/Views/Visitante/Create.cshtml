@model CuidadoWeb.Models.VisitanteViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="visitante-geral">  
<h1 class="Visitante-create" alt="titulo">Registrar novo Visitante</h1>

<h4 class="visitante-create-h4" alt="titulo 2">Dados Do visitante</h4>
<div class="row-visitante-create">
    <div class="col-md-4-visitante">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger-visitante"></div>
            <div class="form-group-visitante" alt="id">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control-visitante" />
                <span asp-validation-for="Id" class="text-danger-visitante"></span>
            </div>
            <div class="form-group-visitante">
                <label asp-for="Nome" class="control-label" alt="Nome input"></label>
                <input asp-for="Nome" class="form-control-visitante" />
                <span asp-validation-for="Nome" class="text-danger-visitante"></span>
            </div>
            <div class="form-group-visitante">
                <label asp-for="Cpf" class="control-label" alt="Cpf input"></label>
                <input asp-for="Cpf" class="form-control-visitante" />
                <span asp-validation-for="Cpf" class="text-danger-visitante"></span>
            </div>
            <div class="form-group-visitante">
                <label asp-for="PrimeiroTelefone" class="control-label" alt="Primeiro Telefone input"></label>
                <input asp-for="PrimeiroTelefone" class="form-control-visitante" />
                <span asp-validation-for="PrimeiroTelefone" class="text-danger-visitante"></span>
            </div>
            <div class="form-group-visitante">
                <label asp-for="SegundoTelefone" class="control-label" alt="Segundo Telefone input"></label>
                <input asp-for="SegundoTelefone" class="form-control-visitante" />
                <span asp-validation-for="SegundoTelefone" class="text-danger-visitante"></span>
            </div>
        </form>
    </div>
</div>

<div class="btn-visitante" alt="botões-visitante">
    <input type="submit" value="Salvar" class="btn-salvar-visitante" alt="botao salvar" />
    <button type="button" class="btn-cancelar-visitante" onclick="window.location.href='@Url.Action("Index")'" alt="botao cancelar">Cancelar</button>

</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
