@model CuidadoWeb.Models.FuncionarioViewModel

<tr>
    <td>@Model.Nome</td>
    <td>@Model.Cargo</td>
    <td>@(Model.Status == "1" ? "Ativo" : "Inativo")</td>
    <td class="text-center column-action">
        <a href="@Url.Action("Edit", "Funcionario", new { id = Model.Id })" class="btn btn-sm btn-primary" title="Editar">
            <i class="fas fa-pencil-alt text-strong"></i>
        </a>
        <a href="@Url.Action("Details", "Funcionario", new { id = Model.Id })" class="btn btn-sm btn-info" title="Detalhes">
            <i class="fas fa-eye text-low"></i>
        </a>
        <a href="@Url.Action("Delete", "Funcionario", new { id = Model.Id })" class="btn btn-sm btn-danger" title="Excluir">
            <i class="fas fa-trash red"></i>
        </a>
    </td>
</tr>